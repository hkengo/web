<h1>新規作成</h1>

<%= form_for @post do |f| %>
<%- if @post.errors.any? %>
  <h2><%= @post.errors.count %> 個のエラーが発生しました．</h2>
  <ul>
  <%- @post.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <%- end %>
  </ul>
<%- end %>
<p>
  <%= f.label :title, "タイトル" %><br>
  <%= f.text_field :title %>
</p>
<p>
  <%= f.label :content, "内容" %><br>
  <%= f.text_area :content %>
</p>
<p><%= f.submit "送信する" %></p>
<%- end %>

<%= link_to "戻る", posts_path %>